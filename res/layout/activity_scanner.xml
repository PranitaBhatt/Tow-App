<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Number Plate Scan"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textStyle="bold"
        android:id="@+id/tvnoplate"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manually"
        android:textSize="30sp"
        android:layout_above="@+id/etscan"
        android:layout_marginBottom="-180dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vehicle No.:"
        android:textSize="20dp"
        android:padding="20dp"
        android:background="#e5e5e5e5"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/tvnoplate"
        android:layout_marginTop="220dp"
        android:id="@+id/etscan" />

    <Button
        android:id="@+id/btnscansub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etscan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/purple_200"
        android:text="Submit"
        android:textColor="#311B92" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:layout_below="@+id/btnscansub"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvor"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnscanno"
        android:layout_below="@+id/tvor"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="-170dp"
        android:text="Scan Process"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"></TextView>

    <Button
        android:id="@+id/btnscanno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvor"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/purple_200"
        android:text=" Scan Number Plate "
        android:textColor="#311B92"></Button>


</RelativeLayout>
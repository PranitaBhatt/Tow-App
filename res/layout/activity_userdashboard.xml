<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userdashboard">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userdashboard"
        android:text="User Dashboard"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginLeft="60dp"
        android:textColor="@color/white"></TextView>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/userdashboard"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_margin="20dp"

        android:rowCount="2">
      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_baseline_person_24"
                    android:id="@+id/imgbtn1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Profile"
                    android:textSize="10dp"
                    android:id="@+id/tvup"
                    android:layout_below="@+id/imgbtn1"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
          <ImageButton
              android:layout_width="150dp"
              android:layout_height="150dp"
              android:layout_marginLeft="20dp"
              android:id="@+id/imgbtn2"
              android:src="@drawable/ic_baseline_two_wheeler_24"
              android:layout_toRightOf="@+id/imgbtn1"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="VehicleRegister"
              android:textSize="10dp"
              android:id="@+id/tvvehicle"
              android:layout_toRightOf="@+id/tvup"
              android:layout_marginLeft="120dp"
              android:layout_below="@+id/imgbtn2"
              android:textStyle="bold"
              android:textColor="@color/black"/>

          <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_baseline_history_24"
                    android:layout_below="@+id/tvup"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/imgbtn3"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ChallanHistory"
                    android:textSize="10dp"
                    android:layout_below="@+id/imgbtn3"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/tvch"/>




                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/imgbtn4"
                    android:layout_below="@+id/tvvehicle"
                    android:layout_toRightOf="@+id/imgbtn3"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"

                    android:src="@drawable/ic_baseline_notifications_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/tvch"
                    android:layout_marginLeft="120dp"
                    android:layout_below="@+id/imgbtn4"

                    android:textColor="@color/black"/>
      </RelativeLayout>

    </GridLayout>
</RelativeLayout>

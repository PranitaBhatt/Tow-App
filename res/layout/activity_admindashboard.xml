<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admindashboard">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admindashboard"
        android:text="Admin Dashboard"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginLeft="60dp"
        android:textColor="@color/white" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/admindashboard"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:rowCount="2">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/aimgbtn1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_baseline_person_24" />

            <TextView
                android:id="@+id/tvap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aimgbtn1"
                android:text="Admin Profile"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <ImageButton
                android:id="@+id/aimgbtn2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/aimgbtn1"
                android:src="@drawable/ic_baseline_qr_code_scanner_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aimgbtn2"
                android:layout_marginStart="120dp"
                android:layout_marginLeft="120dp"
                android:layout_toRightOf="@id/tvap"
                android:text="Vehicle Scan"
                android:textColor="@color/black"
                android:textSize="10dp"></TextView>

            <ImageButton
                android:id="@+id/aimgbtn3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/tvap"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_baseline_history_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aimgbtn3"
                android:text="Previous Files"
                android:textColor="@color/black"
                android:textSize="10dp" />
        </RelativeLayout>


    </GridLayout>

</RelativeLayout>